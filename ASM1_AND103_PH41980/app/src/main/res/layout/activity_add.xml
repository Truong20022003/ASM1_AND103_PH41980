<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AddActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            style="@style/custom_tv_add_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Tên sinh viên"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_ed_bgr"
                android:hint="Nhập tên sinh viên"
                android:textColorHighlight="@color/cardview_dark_background" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            style="@style/custom_tv_add_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã sinh viên"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_MaSV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_ed_bgr"
                android:hint="Nhập mã sinh viên"
                android:textColorHighlight="@color/cardview_dark_background" />
        </com.google.android.material.textfield.TextInputLayout>



        <TextView
            style="@style/custom_tv_add_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Điểm trung bình"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_point"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_ed_bgr"
                android:hint="Nhập điểm trung bình"
                android:textColorHighlight="@color/cardview_dark_background" />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            style="@style/custom_tv_add_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Link ảnh sinh viên"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/anh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_Anh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_ed_bgr"
                android:hint="Nhập link ảnh sinh viên"
                android:textColorHighlight="@color/cardview_dark_background" />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            style="@style/custom_tv_add_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Trạng thái sinh viên"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/trangthai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_TrangThai"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_ed_bgr"
                android:hint="Trạng thái sinh viên"
                android:textColorHighlight="@color/cardview_dark_background" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAdd"
                style="@style/custom_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:text="Xác nhận" />

            <Button
                android:id="@+id/btnClear"
                style="@style/custom_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:text="Làm mới" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>